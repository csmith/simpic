{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "plugin:vue/essential",
    "standard"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "vue"
  ],
  "rules": {
    "vue/script-indent": [
      "error",
      2,
      {
        "baseIndent": 1
      }
    ],
    "vue/no-irregular-whitespace": [
      "error"
    ],
    "vue/no-reserved-component-names": [
      "error"
    ],
    "vue/no-static-inline-styles": [
      "error"
    ],
    "vue/padding-line-between-blocks": [
      "error"
    ],
    "vue/sort-keys": [
      "error"
    ]
  },
  "overrides": [
    {
      "files": [
        "*.vue"
      ],
      "rules": {
        "indent": "off"
      }
    }
  ]
}
